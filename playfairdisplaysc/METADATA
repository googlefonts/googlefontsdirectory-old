font.PlayfairDisplaySC-Bold.ttf.style: normal
font.PlayfairDisplaySC-Black.ttf.style: normal

font.PlayfairDisplaySC-Italic.ttf.style: italic
font.PlayfairDisplaySC-SemiBoldItalic.ttf.style: italic
font.PlayfairDisplaySC-BoldItalic.ttf.style: italic
font.PlayfairDisplaySC-BlackItalic.ttf.style: italic

