font.CrimsonText-Italic.ttf.weight: 400
font.CrimsonText-Semibold.ttf.weight: 600
font.CrimsonText-SemiboldItalic.ttf.weight: 600
font.CrimsonText-Bold.ttf.weight: 700
font.CrimsonText-BoldItalic.ttf.weight: 700

